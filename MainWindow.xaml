<Window x:Class="QuickInstallWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuickInstall" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#FF1E1E2F">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Category Selection -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Category:" Foreground="White" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
            <ComboBox x:Name="CategoryComboBox" Width="200" Height="30" Margin="10,0,0,0"
                      SelectionChanged="CategoryComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- App Cards Container -->
        <ScrollViewer Grid.Row="1">
            <WrapPanel x:Name="AppsPanel" HorizontalAlignment="Left" VerticalAlignment="Top" ItemHeight="220" ItemWidth="160"/>
        </ScrollViewer>

        <!-- Progress & Status -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <ProgressBar x:Name="InstallProgressBar" Height="25" Foreground="#FF4CAF50" Background="#FF3E3E50" Minimum="0" Maximum="100" Value="0"/>
            <TextBlock x:Name="StatusLabel" Text="Status: Idle" Foreground="White" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
